<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.omarali.thecookbook.private_message"
    android:weightSum="1">

    <ImageView
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_weight="0.20"
        android:src="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Profile"
        android:id="@+id/profile"
        android:layout_weight="0.04" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Omar Saleh:"
        android:id="@+id/textView6"
        android:layout_weight="0.03" />

    <TextView
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hello!"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hi :)"
        android:id="@+id/textView8"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Can you please send me the ingredience to make cupcakes?"
        android:id="@+id/textView9"
        android:layout_weight="0.02" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/private_message_reply"
        android:layout_gravity="right"
        android:layout_weight="0.20"
        android:hint="write a reply..." />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/send_reply"
        android:layout_gravity="right" />

</LinearLayout>
